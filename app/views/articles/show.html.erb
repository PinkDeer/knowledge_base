<h1><%= @article.title %></h1>
<p><%= @article.content.html_safe %></p>
<hr>

<div>
  <h3><%= pluralize(@article.comments.count, "Comment")  %></h3>
	<% @comments.each do |comment| %>
		<div>
			<p><%= comment.user.email %></p>
			<p><%= comment.comment %></p>
      <!-- <%=  link_to "Edit", edit_article_comment_path(comment.article, comment) %>
      <%= link_to "Delete", [comment.article, comment], method: :delete, data: { confirm: "Are you sure?" } %> -->
    </div>
  <% end %>
	<%= render "comments/form" %>
</div>

<div class="btn-group">
  <%= link_to 'Back', root_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_article_path(@article), class: "btn btn-default"%>
  <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
</div>
